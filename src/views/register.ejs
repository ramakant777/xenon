<%-include( "partials/header" )%>
    <div class="container py-5 d-flex  text-center flex-column justify-content-center w-100" style="margin-top:10%">
        <h1>Register</h1>
        <form action="/user/register" method="POST">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required><br><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>

            <input type="submit" class="btn btn-secondary" value="Register"></input>
            <a href="/user/login" class="btn btn-secondary">Login</a>
        </form>
    </div>
    </body>

    </html>